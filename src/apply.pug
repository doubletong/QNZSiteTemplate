                                input.form-control(type="text")  
                            .form-group.wow.fadeInUp 
                                .form-label 所在公司
                                input.form-control(type="text")  
                            .form-group.wow.fadeInUp 
                                .form-label 公司规模
                                input.form-control(type="text")  
                            
                            .form-group 
                                .item.wow.fadeInUp  
