            footer.left-footer 
                .row 
                    .col 
                        img(src="img/floor.png", alt="")       
                    .col 
                        select.form-control(name="dr")                  
                            option(value="1") L1
                            option(value="2", selected) L2
                            option(value="3") L3
                        ul.des 
                            li 层高：3.5 M
                            li 层数：22 F
                            li 高度：77 m
            

        .mainContent
            header.main-header
                .row.align-items-center
                    .col 
                        h3.title L2 设计图纸
                    .col-auto
                        ul.actions 
                            li 
                                a.btn.btn-white.btn-default-outline.btn-radius(href="#") 预览平面信息
