                                a.btn.btn-radius.btn-gray(href="#") 导出图纸

            main.main-body
                .text-center 
                    img(src="img/temp/dr-design.png", alt="")

            
            .footer.main-footer 
                ul.actions 
                    li 
                        a.btn.btn-white.btn-default-outline.btn-radius(href="#") 调整平面轴网
                    li 
                        a.btn.btn-white.btn-default-outline.btn-radius(href="#") 调整建筑边界

                                
        
          

        aside.rightCol 
            header.title
                h3.title 产品指标
            .des
                .row.gx-0.align-items-center 
                    .col-4 总造价
                    .col-8 
                        input(type="range", id="slider-1", value="50", min="0", max="100", disabled)
                .row.gx-0.align-items-center 
                    .col-4 回收期
                    .col-8 
                        input(type="range", id="slider-1", value="96", min="0", max="100",  disabled)
                .row.gx-0.align-items-center 
                    .col-4 适合地段
                    .col-8 
                        input(type="range", id="slider-1", value="34", min="0", max="100",  disabled)

                .row.gx-0.align-items-center 
                    .col-4 目标客户
                    .col-8 
                        input(type="range", id="slider-1", value="89", min="0", max="100",  disabled)
                .row.gx-0.align-items-center 
                    .col-4 出租率
                    .col-8 
                        input(type="range", id="slider-1", value="67", min="0", max="100",  disabled)


           
            footer.text-center
                p.note L2: 22 F  X  3.5 M
