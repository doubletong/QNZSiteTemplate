block content
    .wrapper-design 
        .leftCol
            header.logo 
                a(href="/") 
                    img(src="img/logo_red.svg", alt="logo")

            #toolbar.toolbar 
                .box.open.box1 
                    .box-header
                        h3.title 基本轴网设计 
                        i.iconfont.icon-arrow-down
                    .box-body 
                        a(href="#") 添加X轴
                        a(href="#") 添加Y轴

                .box.box2
                    .box-header
                        h3.title 交通模块 
                        i.iconfont.icon-arrow-down
